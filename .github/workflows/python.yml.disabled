name: Python CI

on: [push, pull_request]

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: "3.12"
          cache: "pip"

      - run: python -m pip install -U pop
      - run: pip install .

      - run: python -m spacy download en_core_web_sm
      - run: pytest
